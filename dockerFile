# Etapa de build
FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
WORKDIR /src

# Copiar solución y proyectos necesarios
COPY CalculadoraSolucion.sln ./
COPY CalculadoraWeb/CalculadoraWeb.csproj CalculadoraWeb/
COPY Validar.Logica/Validar.Logica.csproj Validar.Logica/
COPY calculadora.logica/Calculadora.Logica.csproj calculadora.logica/
COPY Validar.correo/Validar.correo.csproj Validar.correo/

# Restaurar dependencias
RUN dotnet restore CalculadoraSolucion.sln

# Copiar el resto del código fuente
COPY . .

# Publicar solo el proyecto CalculadoraWeb
RUN dotnet publish CalculadoraWeb/CalculadoraWeb.csproj -c Release -o /app/publish

# Etapa de runtime
FROM mcr.microsoft.com/dotnet/aspnet:6.0
WORKDIR /app
COPY --from=build /app/publish .

# Configurar entorno
ENV ASPNETCORE_URLS=http://+:80
EXPOSE 80

# Ejecutar el proyecto web
ENTRYPOINT ["dotnet", "CalculadoraWe.dll"]